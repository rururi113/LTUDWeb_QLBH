@model SV21T1020218.Web.Models.OrderDetailModel

@{
    ViewBag.Title = "Quản lý đơn hàng";
    var order = Model.Order!;
    var detail = Model.Details!;
}

<div class="box box-primary">
    <div class="box-header text-right">
        <div class="btn-group">
            <div class="btn-group">
                <button type="button" class="btn btn-sm btn-primary dropdown-toggle" data-toggle="dropdown">
                    Xử lý đơn hàng <span class="caret"></span>
                </button>
                <ul class="dropdown-menu" role="menu">
                    @*Chỉ chấp nhận khi đơn hàng khởi tạo thành công và danh sách mặt hàng thuộc đơn hàng khác rỗng*@
                    @if (order.Status == SV21T1020218.DomainModels.Constants.ORDER_INIT && detail.Count > 0)
                    {
                        <li><a href="~/Order/Accept/@order.OrderID" onclick="return confirm('Xác nhận duyệt chấp nhận đơn hàng này?')">Duyệt đơn hàng</a></li>
                    }

                    @*Đơn hàng chỉ được hoàn tất sau khi giao thành công và danh sách mặt hàng thuộc đơn hàng khác rỗng*@
                    @if (order.Status == SV21T1020218.DomainModels.Constants.ORDER_SHIPPING && detail.Count > 0)
                    {
                        <li><a href="~/Order/Finish/@order.OrderID" onclick="return confirm('Xác nhận đơn hàng đã hoàn tất thành công?')">Xác nhận hoàn tất đơn hàng</a></li>
                    }

                    @* <li class="divider"></li> *@
                    @*Được chuyển giao đơn hàng khi đơn hàng đã được chấp nhận*@
                    @if (order.Status == SV21T1020218.DomainModels.Constants.ORDER_ACCEPTED)
                    {
                        <li><a href="~/Order/Shipping/@order.OrderID" class="btn-modal">Chuyển giao hàng</a></li>
                    }

                    @*Được hủy đơn hàng khi trạng thái không phải được hoàn tất*@
                    @if (order.Status != SV21T1020218.DomainModels.Constants.ORDER_FINISHED &&
                    order.Status != SV21T1020218.DomainModels.Constants.ORDER_CANCEL)
                    {
                        <li>
                            <a href="~/Order/Cancel/@order.OrderID"
                               onclick="return confirm('Xác nhận hủy đơn hàng này?')">Hủy đơn hàng</a>
                        </li>
                    }

                    @*Chỉ từ chối khi đơn hàng khởi tạo thành công*@
                    @if (order.Status == SV21T1020218.DomainModels.Constants.ORDER_INIT)
                    {
                        <li>
                            <a href="~/Order/Reject/@order.OrderID"
                               onclick="return confirm('Xác nhận từ chối đơn hàng này?')">Từ chối đơn hàng</a>
                        </li>
                    }
                </ul>
            </div>
            @*Chỉ được xóa đơn hàng khi ở trạng thái khởi tạo, từ chối hoặc bị hủy*@
            @if (order.Status == SV21T1020218.DomainModels.Constants.ORDER_INIT &&
            order.Status != SV21T1020218.DomainModels.Constants.ORDER_REJECTED &&
            order.Status != SV21T1020218.DomainModels.Constants.ORDER_CANCEL)
            {
                <a href="~/Order/Delete/@order.OrderID" class="btn btn-sm btn-danger"
                   onclick="return confirm('Có chắc chắn muốn xóa đơn hàng này không?')">
                    <i class="fa fa-trash"></i>
                    Xóa đơn hàng
                </a>
            }
            else
            {
                <a href="~/Order/Delete/@order.OrderID" class="btn btn-sm btn-danger disabled"
                   onclick="return confirm('Có chắc chắn muốn xóa đơn hàng này không?')">
                    <i class="fa fa-trash"></i>
                    Xóa đơn hàng
                </a>
            }
            <a href="~/Order" class="btn btn-sm btn-info">Quay lại</a>
        </div>
    </div>
    <div class="box-body form-horizontal">
        <div class="form-group">
            <label class="control-label col-sm-2">Mã đơn hàng:</label>
            <div class="col-sm-4">
                <p class="form-control">@Model.Order?.OrderID</p>
            </div>
            <label class="control-label col-sm-2">Ngày lập đơn hàng:</label>
            <div class="col-sm-4">
                <p class="form-control">@Model.Order?.OrderTime.ToString("dd/MM/yyyy HH:mm", new System.Globalization.CultureInfo("en-GB"))</p>
            </div>
            <label class="control-label col-sm-2">Nhân viên phụ trách:</label>
            <div class="col-sm-4">
                <p class="form-control">@Model.Order?.EmployeeName</p>
            </div>

            <label class="control-label col-sm-2">Ngày nhận đơn hàng:</label>
            <div class="col-sm-4">
                <p class="form-control">@Model.Order?.AcceptTime?.ToString("dd/MM/yyyy HH:mm", new System.Globalization.CultureInfo("en-GB"))</p>
                @*<p class="form-control">@string.Format(new System.Globalization.CultureInfo("en-GB"),"{0:dd/MM/yyyy HH:mm}",Model.Order?.AcceptTime)</p> *@
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2">Khách hàng:</label>
            <div class="col-sm-4">
                <p class="form-control">@Model.Order?.CustomerName</p>
            </div>
            <label class="control-label col-sm-2">Tên giao dịch:</label>
            <div class="col-sm-4">
                <p class="form-control">@Model.Order?.CustomerContactName</p>
            </div>
            <label class="control-label col-sm-2">Địa chỉ:</label>
            <div class="col-sm-10">
                <p class="form-control">@Model.Order?.CustomerAddress</p>
            </div>
            <label class="control-label col-sm-2">Email:</label>
            <div class="col-sm-10">
                <p class="form-control">@Model.Order?.CustomerEmail</p>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2">Địa chỉ giao hàng:</label>
            <div class="col-sm-10">
                <p class="form-control">@Model.Order?.DeliveryAddress</p>
            </div>
            <label class="control-label col-sm-2">Tỉnh/thành:</label>
            <div class="col-sm-10">
                <p class="form-control">@Model.Order?.DeliveryProvince</p>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2">Người giao hàng:</label>
            <div class="col-sm-4">
                <p class="form-control">@Model.Order?.ShipperName</p>
            </div>
            <label class="control-label col-sm-2">Điện thoại:</label>
            <div class="col-sm-4">
                <p class="form-control">@Model.Order?.ShipperPhone</p>
            </div>
            <label class="control-label col-sm-2">Nhận giao hàng lúc:</label>
            <div class="col-sm-4">
                <p class="form-control">@Model.Order?.ShippedTime?.ToString("dd/MM/yyyy HH:mm", new System.Globalization.CultureInfo("en-GB"))</p>

            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2">Trạng thái đơn hàng:</label>
            <div class="col-sm-4">
                <p class="form-control">@Model.Order?.StatusDescription</p>
            </div>
            <label class="control-label col-sm-2">Thời điểm hoàn tất:</label>
            <div class="col-sm-4">
                <p class="form-control">@Model.Order?.FinishedTime?.ToString("dd/MM/yyyy HH:mm", new System.Globalization.CultureInfo("en-GB"))</p>
            </div>
        </div>
    </div>

    <div class="box-body">
        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
                <caption><h4>Danh sách mặt hàng thuộc đơn hàng</h4></caption>
                <thead>
                    <tr class="bg-primary">
                        <th class="text-center">STT</th>
                        <th class="text-center">Tên hàng</th>
                        <th class="text-center">ĐVT</th>
                        <th class="text-center">Số lượng</th>
                        <th class="text-center">Giá</th>
                        <th class="text-center">Thành tiền</th>
                        <th style="width:80px"></th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model.Details)
                    {
                        <tr>
                            <td class="text-center">1</td>
                            <td>@item.ProductName</td>
                            <td class="text-center">@item.Unit</td>
                            <td class="text-center">@item.Quantity</td>
                            <td class="text-right">@item.SalePrice</td>
                            <td class="text-right">@item.TotalPrice.ToString("N0")</td>
                            <td class="text-right">
                                @*Chỉ có thể cập nhật / xóa chi tiết đơn hàng khi đơn hàng ở trạng thái khởi tạo
                            hoặc đã chấp nhận*@
                                @if (order.Status == SV21T1020218.DomainModels.Constants.ORDER_INIT ||
                               order.Status == SV21T1020218.DomainModels.Constants.ORDER_ACCEPTED)
                                {
                                    <a href="~/Order/EditDetail/@item.OrderID?productId=@item.ProductID" class="btn btn-xs btn-primary btn-modal">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                    <a href="~/Order/DeleteDetail/@item.OrderID?productId=@item.ProductID" class="btn btn-xs btn-danger" onclick="return confirm('Xóa mặt hàng này khỏi đơn hàng?')">
                                        <i class="fa fa-trash"></i>
                                    </a>
                                }
                                else
                                {
                                    <a href="~/Order/EditDetail/@item.OrderID?productId=@item.ProductID" class="btn btn-xs btn-primary btn-modal disabled">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                    <a href="~/Order/DeleteDetail/@item.OrderID?productId=@item.ProductID" class="btn btn-xs btn-danger disabled" onclick="return confirm('Xóa mặt hàng này khỏi đơn hàng?')">
                                        <i class="fa fa-trash"></i>
                                    </a>
                                }
                            </td>
                        </tr>
                    }

                </tbody>
                <tfoot>
                    @{
                        decimal total = 0;
                    }
                    @foreach (var item in Model.Details)
                    {
                        total += item.TotalPrice;
                    }
                    <tr>
                        <th colspan="5" class="text-right">Tổng cộng:</th>
                        <th class="text-right">@string.Format("{0:N0}", total)</th>
                        <th></th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>

<div id="dialogModal" class="modal fade" role="dialog">
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            $(".btn-modal").click(function (e) {
                e.preventDefault();
                var link = $(this).prop("href");
                $.ajax({
                    url: link,
                    type: "GET",
                    error: function () {
                        alert("Your request is not valid!");
                    },
                    success: function (data) {
                        $("#dialogModal").empty();
                        $("#dialogModal").html(data);
                        $("#dialogModal").modal();
                    }
                });
            });
        })
    </script>
}