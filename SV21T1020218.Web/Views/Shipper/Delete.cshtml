@using SV21T1020218.BusinessLayers
@model Shipper
@{
    ViewBag.Title = "Xóa người giao hàng";
}
<div class="box box-danger">
    <div class="box-body">
        <form action="~/Shipper/Delete/@Model.ShipperID" method="post">
            <div class="form-group">
                <label> Tên người giao hàng:</label>
                <p class="form-control-static form-control">@Model.ShipperName</p>
            </div>

            <div class="form-group">
                <label> Điện thoại:</label>
                <p class="form-control-static form-control">@Model.Phone </p>
            </div>

            <div class="form-group text-right">
                @if (CommonDataService.InUsedShipper(Model.ShipperID))
                {
                    <button type="submit" class="btn btn-danger">
                        <i class="fa fa-trash">Xóa dữ liệu</i>
                    </button>
                }
                <a href="~/Shipper" class="btn btn-default">
                    Quay lại
                </a>
            </div>
        </form>
    </div>
</div>