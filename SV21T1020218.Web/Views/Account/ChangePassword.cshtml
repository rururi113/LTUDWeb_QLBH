@{
    ViewBag.Title = "Đổi mật khẩu";
}
@{
    var userData = User.GetUserData();
    if (userData != null)
    {
        if (TempData["ChangedPassword"] != null)
        {
            <div class="alert alert-success">
                <strong>Success!</strong>
                <p>@TempData["ChangedPassword"]</p>
            </div>
        }
        <div class="box box-primary">
            <div class="box-body">
                <form action="~/Account/ChangePassword" method="post">
                    <input type="hidden" name="@nameof(userData.UserName)" value="@userData.UserName" />
                    <div class="form-group">
                        <label>Mật khẩu cũ:</label>
                        <input type="password" class="form-control" name="oldPassword" required autofocus>
                    </div>

                    <div class="form-group">
                        <label>Mật khẩu mới:</label>
                        <input type="password" class="form-control" name="newPassword" required>
                    </div>

                    <div class="form-group">
                        <label>Xác nhận lại mật khẩu:</label>
                        <input type="password" class="form-control" name="confirmPassword" required>
                    </div>
                    @Html.ValidationMessage("Error")
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-6">
                            </div>
                            <div class="col-md-6 text-right">
                                <button type="submit" class="btn btn-primary">Đổi mật khẩu</button>
                                <a href="~/" class="btn btn-default">Bỏ qua</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    }
}

