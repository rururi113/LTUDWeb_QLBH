@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>Login</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Thêm Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        .full-height {
            height: 100vh;
        }

        .login-box {
            width: 400px;
            background: #fff;
            border: 5px solid #dc3545;
            padding: 30px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }

        .login-logo {
            font-size: 2rem;
            margin-bottom: 30px;
            text-align: center;
            background-color: #dc3545;
            color: #fff;
            padding: 15px 0;
            border-radius: 8px;
        }

        .login-logo a {
            text-decoration: none;
            color: #fff;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-control {
            height: 45px;
            font-size: 16px;
        }

        .error-message {
            color: #dc3545;
            text-align: center;
            margin: 15px 0;
            min-height: 20px;
            font-size: 14px;
        }

        .button-group {
            display: flex;
            gap: 15px;
            margin-top: 20px;
        }

        .back-button, 
        .login-button {
            flex: 1;
            height: 45px;
            border: none;
            border-radius: 4px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 16px;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .back-button {
            background-color: #6c757d;
            color: white;
        }

        .login-button {
            background-color: #dc3545;
            color: white;
        }

        .btn:hover {
            opacity: 0.9;
            transform: translateY(-1px);
            box-shadow: 0 2px 5px rgba(0,0,0,0.2);
        }

        .bi {
            margin-right: 8px;
            font-size: 18px;
        }

        .form-control:focus {
            border-color: #dc3545;
            box-shadow: 0 0 0 0.2rem rgba(220, 53, 69, 0.25);
        }
    </style>
</head>
<body>
    <div class="d-flex justify-content-center align-items-center full-height">
        <div class="login-box">
            <div class="login-logo">
                <a href="@Url.Action("Index", "Home")" style="cursor: pointer;">
                    <b>Liverpool</b> Shop
                </a>
            </div>
            <!-- /.login-logo -->
            <div class="login-box-body">

                <form action="~/Account/Login" method="post">
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Tên đăng nhập" 
                               name="username" value="@ViewBag.UserName" autofocus>
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" placeholder="Mật khẩu" 
                               name="password">
                    </div>
                    <div class="error-message">
                        @Html.ValidationMessage("Error")
                    </div>
                    <div class="button-group">
                        <button type="button" class="btn back-button" onclick="goBack()">
                            <i class="bi bi-arrow-left"></i>
                            Hủy
                        </button>
                        <button type="submit" class="btn login-button">
                            <i class="bi bi-box-arrow-in-right"></i>
                            Đăng nhập
                        </button>
                    </div>
                    <div class="mt-3 text-center">
                        <p>Chưa có tài khoản? <a href="@Url.Action("Register", "Account")">Đăng ký ngay</a></p>
                    </div>
                </form>
            </div>
            <!-- /.login-box-body -->
        </div>
    </div>
    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    
    <!-- Thêm script xử lý nút Quay lại -->
    <script>
        function goBack() {
            if (document.referrer) {
                // Nếu có trang trước đó, quay lại trang đó
                window.history.back();
            } else {
                // Nếu không có trang trước đó, chuyển về trang chủ
                window.location.href = '/';
            }
        }
    </script>
</body>
</html>
