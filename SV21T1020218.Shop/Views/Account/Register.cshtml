@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>Đăng ký</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        .full-height {
            height: 100vh;
        }

        .login-box {
            width: 400px;
            background: #fff;
            border: 5px solid #dc3545;
            padding: 30px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }

        .login-logo {
            font-size: 2rem;
            margin-bottom: 30px;
            text-align: center;
            background-color: #dc3545;
            color: #fff;
            padding: 15px 0;
            border-radius: 8px;
        }

        .login-logo a {
            text-decoration: none;
            color: #fff;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-control {
            height: 45px;
            font-size: 16px;
        }

        .error-message {
            color: #dc3545;
            text-align: center;
            margin: 15px 0;
            min-height: 20px;
            font-size: 14px;
        }

        .button-group {
            display: flex;
            gap: 15px;
            margin-top: 20px;
        }

        .back-button, 
        .login-button {
            flex: 1;
            height: 45px;
            border: none;
            border-radius: 4px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 16px;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .back-button {
            background-color: #6c757d;
            color: white;
        }

        .login-button {
            background-color: #dc3545;
            color: white;
        }

        .btn:hover {
            opacity: 0.9;
            transform: translateY(-1px);
            box-shadow: 0 2px 5px rgba(0,0,0,0.2);
        }

        .bi {
            margin-right: 8px;
            font-size: 18px;
        }

        .form-control:focus {
            border-color: #dc3545;
            box-shadow: 0 0 0 0.2rem rgba(220, 53, 69, 0.25);
        }
    </style>
</head>
<body>
    <div class="d-flex justify-content-center align-items-center full-height">
        <div class="login-box">
            <div class="login-logo">
                <a href="@Url.Action("Index", "Home")" style="cursor: pointer;">
                    <b>Liverpool</b> Shop
                </a>
            </div>
            <div class="login-box-body">
                <form action="~/Account/Register" method="post">
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <input type="email" class="form-control" name="email" placeholder="Email" required>
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="password" placeholder="Mật khẩu" required>
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="confirmPassword" placeholder="Xác nhận mật khẩu" required>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="customerName" placeholder="Họ và tên" required>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="address" placeholder="Địa chỉ">
                    </div>
                    <div class="form-group">
                        <input type="tel" class="form-control" name="phone" placeholder="Số điện thoại">
                    </div>
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success text-center">
                            @TempData["SuccessMessage"]
                        </div>
                    }
                    <div class="error-message">
                        @Html.ValidationMessage("Error")
                    </div>
                    <div class="button-group">
                        <button type="button" class="btn back-button" onclick="location.href='@Url.Action("Login", "Account")'">
                            <i class="bi bi-arrow-left"></i>
                            Quay lại
                        </button>
                        <button type="submit" class="btn login-button">
                            <i class="bi bi-person-plus"></i>
                            Đăng ký
                        </button>
                    </div>
                    <div class="mt-3 text-center">
                        <p>Đã có tài khoản? <a href="@Url.Action("Login", "Account")">Đăng nhập ngay</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>
</html>